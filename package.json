{
  "name": "home-dashboard",
  "version": "0.1.0",
  "private": true,
  "author": {
    "name": "Guido Lange",
    "email": "guidolange90@gmail.com",
    "url": "https://github.com/gylxan"
  },
  "main": "start.js",
  "scripts": {
    "postinstall": "(cd ./src/public/react && npm install)",
    "start": "NODE_ENV=production node ./build/start.js",
    "start:dev": "concurrently --kill-others-on-fail \"npm run start:dev-server\" \"npm run start:dev-client\"",
    "start:dev-server": "nodemon --config \"./utils/nodemon.json\"/",
    "start:dev-client": "cd ./src/public/react && npm start",
    "build": "./utils/build.sh",
    "lint": "eslint 'src/**/*.{js,ts,tsx}'",
    "prettify": "prettier --write 'src/public/react/src/**/*.{js,css,json,ts,tsx}' 'src/**/!(public)/*.{js,css,json,ts,tsx}'"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "minimist": "^1.2.5",
    "nedb": "^1.8.0",
    "node-hue-api": "^4.0.10"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.9",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/minimist": "^1.2.1",
    "@types/nedb": "^1.8.11",
    "@types/node": "^14.14.16",
    "@typescript-eslint/eslint-plugin": "^3.10.1",
    "@typescript-eslint/parser": "^3.10.1",
    "concurrently": "^5.3.0",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.3.0",
    "eslint-plugin-react": "^7.21.5",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
